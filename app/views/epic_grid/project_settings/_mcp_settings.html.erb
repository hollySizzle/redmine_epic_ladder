<%# view_projects_form hook: 既存プロジェクトでepic_gridモジュールが有効な場合のみ表示 %>
<% if project.persisted? && project.module_enabled?(:epic_grid) %>
<% setting = EpicGrid::ProjectSetting.for_project(project) %>

<fieldset class="box epic-grid-mcp-settings">
  <legend>Epic Grid - MCP API設定</legend>

  <p>
    <label>
      <%= check_box_tag 'epic_grid_mcp_enabled', '1', setting.mcp_enabled,
          id: 'epic_grid_mcp_enabled_checkbox',
          data: { project_id: project.id } %>
      <strong>このプロジェクトでMCP APIを許可する</strong>
    </label>
    <em class="info">
      Claude Code等のAIツールからこのプロジェクトへのアクセスを許可します
    </em>
  </p>

  <p>
    <%= button_tag l(:button_save),
        type: 'button',
        id: 'epic-grid-save-button',
        class: 'button',
        data: { project_id: project.id } %>
    <span id="epic-grid-status" style="margin-left: 10px;"></span>
  </p>
</fieldset>

<script>
(function() {
  const checkbox = document.getElementById('epic_grid_mcp_enabled_checkbox');
  const saveButton = document.getElementById('epic-grid-save-button');
  const statusSpan = document.getElementById('epic-grid-status');

  if (!saveButton || !checkbox) return;

  saveButton.addEventListener('click', function() {
    const projectId = this.dataset.projectId;
    const mcpEnabled = checkbox.checked;
    const url = '/projects/' + projectId + '/epic_grid/settings';

    const formData = new FormData();
    formData.append('epic_grid_project_setting[mcp_enabled]', mcpEnabled ? '1' : '0');
    formData.append('authenticity_token', document.querySelector('meta[name="csrf-token"]').content);

    statusSpan.textContent = '保存中...';
    statusSpan.style.color = 'gray';

    fetch(url, {
      method: 'PATCH',
      body: formData,
      headers: {
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      if (response.ok) {
        statusSpan.textContent = '✓ 保存しました';
        statusSpan.style.color = 'green';
        setTimeout(() => { statusSpan.textContent = ''; }, 3000);
      } else {
        throw new Error('保存に失敗しました');
      }
    })
    .catch(error => {
      statusSpan.textContent = '✗ 保存に失敗しました';
      statusSpan.style.color = 'red';
    });
  });
})();
</script>

<style>
.epic-grid-mcp-settings {
  margin-top: 20px;
  background: #f8f9fa;
}
.epic-grid-mcp-settings legend {
  font-weight: bold;
  color: #333;
}
.epic-grid-mcp-settings .info {
  display: block;
  font-style: italic;
  color: #666;
  font-size: 0.9em;
  margin-top: 3px;
}
</style>
<% end %>
