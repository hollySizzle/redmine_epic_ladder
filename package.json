{
  "name": "redmine_epic_grid",
  "version": "1.0.0",
  "description": "Release Kanban with Epic→Feature→UserStory→Task/Test hierarchy for Redmine",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:limited": "nice -n 10 vitest run --pool=threads --poolOptions.threads.maxThreads=2",
    "test:full": "vitest run --pool=threads --poolOptions.threads.maxThreads=50%",
    "test:single": "nice -n 10 vitest run --pool=threads --poolOptions.threads.maxThreads=1",
    "copy:msw": "cp assets/build/mockServiceWorker.js /usr/src/redmine/public/mockServiceWorker.js && echo '✅ Copied mockServiceWorker.js to /usr/src/redmine/public/'",
    "build": "webpack && npm run copy:msw",
    "build-production": "webpack --config webpack.production.config.js && npm run copy:msw",
    "watch": "webpack --watch",
    "deploy": "npm run build && cp assets/build/kanban_bundle.js /usr/src/redmine/public/plugin_assets/redmine_epic_grid/",
    "deploy:prod": "npm run build-production && cp assets/build/kanban_bundle.js /usr/src/redmine/public/plugin_assets/redmine_epic_grid/",
    "deploy:watch": "npm run watch & while inotifywait -e modify assets/build/kanban_bundle.js; do cp assets/build/kanban_bundle.js /usr/src/redmine/public/plugin_assets/redmine_epic_grid/; done",
    "dev": "lsof -ti :8080 | xargs -r kill -9 2>/dev/null || true && npm run copy:msw && webpack serve --mode development",
    "build:release": "./scripts/build_for_release.sh",
    "package:release": "./scripts/build_for_release.sh --package"
  },
  "keywords": [
    "redmine",
    "kanban",
    "release",
    "react"
  ],
  "author": "holly",
  "license": "MIT",
  "dependencies": {
    "@atlaskit/motion": "^5.3.7",
    "@atlaskit/pragmatic-drag-and-drop": "^1.7.7",
    "@atlaskit/tokens": "^6.4.2",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.11.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.4",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "sass": "^1.89.2",
    "sass-embedded": "^1.93.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "vitest": "^3.2.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  }
}
