{
  "name": "redmine_release_kanban",
  "version": "1.0.0",
  "description": "Release Kanban with Epic→Feature→UserStory→Task/Test hierarchy for Redmine",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:limited": "nice -n 10 jest --maxWorkers=2",
    "test:full": "jest --maxWorkers=50%",
    "test:single": "nice -n 10 jest --maxWorkers=1",
    "build": "webpack",
    "build-production": "webpack --config webpack.production.config.js",
    "watch": "webpack --watch",
    "deploy": "npm run build && cp assets/javascripts/kanban/dist/kanban_bundle.js /usr/src/redmine/public/plugin_assets/redmine_release_kanban/",
    "deploy:prod": "npm run build-production && cp assets/javascripts/kanban/dist/kanban_bundle.js /usr/src/redmine/public/plugin_assets/redmine_release_kanban/",
    "deploy:watch": "npm run watch & while inotifywait -e modify assets/javascripts/kanban/dist/kanban_bundle.js; do cp assets/javascripts/kanban/dist/kanban_bundle.js /usr/src/redmine/public/plugin_assets/redmine_release_kanban/; done",
    "dev": "npm run deploy:watch",
    "build:release": "./scripts/build_for_release.sh",
    "package:release": "./scripts/build_for_release.sh --package"
  },
  "keywords": [
    "redmine",
    "kanban",
    "release",
    "react"
  ],
  "author": "holly",
  "license": "MIT",
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.11.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
